<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campgrounds</a>
</div>
<% for (let campground of campgrounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (campground.images.length) { %>
                    <img class="img-fluid" alt="" src="<%= campground.images[0].url %>">
                <% } else { %>
                        <img class="img-fluid" src="https://res.cloudinary.com/mariodmpereira/image/upload/v1639909068/yelp-camp/photo-1533873984035-25970ab07461_olujpi.jpg" alt="">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <p class="card-text"><%= campground.description %></p>
                    <p class="card-text">
                        <small class="text-muted"></small><%= campground.location %>
                    </p>
                    <a class="btn btn-primary"
                       href="/campgrounds/<%= campground._id %>">View <%= campground.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>